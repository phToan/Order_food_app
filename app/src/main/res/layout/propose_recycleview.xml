<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="6dp"
    android:id="@+id/layout_item_store"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:elevation="3dp"
            android:id="@+id/image_propose_recycleview"
            android:scaleType="centerCrop"
            android:src="@drawable/pizza"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_endow"
            android:text="Ưu đãi đến 33k"
            android:drawablePadding="3dp"
            android:padding="3dp"
            android:textColor="#fa680a"
            android:drawableStart="@drawable/baseline_star_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/propose_nameStore"
            android:text="Chimiko - Cơm Hàn chuẩn vị"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:padding="3dp"
            android:textSize="18sp"
            android:textStyle="bold"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>